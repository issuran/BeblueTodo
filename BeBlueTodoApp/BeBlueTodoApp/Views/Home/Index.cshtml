@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>BeBlue : Todo List</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">ToDo List</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: todoitems">
                    <li>
                        <span data-bind="text: Description"></span> : <strong><span data-bind="text: IsDone"></span></strong> 
                        <small><a href="#" data-bind="click: $parent.getTodoItemDetail">Details</a></small>
                        <small><a href="#" data-bind="click: $parent.getTodoItemDone">DONE</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">        
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Todo Details</h2>
                </div>
                <table class="table">
                    <tr><td>Developer</td><td data-bind="text: detail().PersonName"></td></tr>
                    <tr><td>Task</td><td data-bind="text: detail().Description"></td></tr>
                    <tr><td>Status</td><td data-bind="text: detail().IsDone"></td></tr>
                </table>
            </div>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add ToDo</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addTodoItem">
                    <div class="form-group">
                        <label for="inputName" class="col-sm-2 control-label">Developer</label>
                        <div class="col-sm-10">
                            <select data-bind="options:people, optionsText: 'Name', value: newTodoItem.Person"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newTodoItem">
                        <label for="inputDescription" class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Description" name="Description" data-bind="value:Description" />
                        </div>

                        <label for="inputIsDone" class="col-sm-2 control-label">Status</label>
                        <div class="col-sm-10">
                            <select data-bind="options: $root.resultChoices, value:result, optionsText: $data" id="IsDone"></select>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>