@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>BeBlue : Todo List</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">ToDo List</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: todoitems">
                    <li>
                        <span data-bind="text: Description"></span> : <strong><span data-bind="text: IsDone"></span></strong>
                        <small><a href="#" data-bind="click: $parent.getTodoItemDetail">Details</a></small>
                        <small><a href="#" data-bind="click: $parent.getTodoItemDone">DONE</a></small>
                        <small><a href="#" data-bind="click: $parent.getTodoItemRemove">Remove</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Todo Details</h2>
                </div>
                <table class="table">
                    <tr><td>Developer</td><td data-bind="text: detail().PersonName"></td></tr>
                    <tr><td>Task</td><td data-bind="text: detail().Description"></td></tr>
                    <tr><td>Status</td><td data-bind="text: detail().IsDone"></td></tr>
                </table>
            </div>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add ToDo</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addTodoItem">
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="inputName">Developer</label>
                        <div class="col-md-8">
                            <select data-bind="options:people, optionsText: 'Name', value: newTodoItem.Person" class="form-control"></select>
                        </div>
                    </div>  

                    <div class="form-group" data-bind="with: newTodoItem">
                        <label class="col-md-4 control-label" for="inputDescription">Description</label>
                        <div class="col-md-8">
                            <input id="Description" required="" name="Description" placeholder="Description" class="form-control input-md" type="text" data-bind="value:Description">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="inputIsDone">Status</label>
                        <div class="col-md-8">
                            <select data-bind="options: $root.resultChoices, optionsText: $data" id="IsDone" class="form-control"></select>
                        </div>
                    </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        </div>
    </div>
</div>